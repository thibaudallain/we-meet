<div class="container-wm relative">
  <div class="cheers">
    <%= image_tag "avatars/cheers.gif"%>
  </div>
<%= form_tag(event_meeting_path(@event, @meeting), method: :patch) do %>
  <div class="container-wm">
      <div class="form-container">
          <div id="invite-1">
            <%= label_tag 'NOM' %>
            <%= text_area_tag :name, "", class: 'form-control form-input', placeholder: "Marie", required: true%>
            <div class="arrows">
              <%= image_tag "down-arrow.gif", id: "invite-arrow-1"%>
            </div>
          </div>
        </div>
      </div>

      <div class="container-wm">
        <div class="form-container">
          <div id="invite-2">
            <%= label_tag 'Téléphone' %>
            <%= text_area_tag :phone_number, "", class: 'form-control form-input', placeholder: "0660832635", required: true %>
          <div class="arrows">
              <%= image_tag "down-arrow.gif", id: "invite-arrow-2"%>
          </div>
        </div>
      </div>
    </div>


      <div class="container-wm">
        <div class="form-container">
          <div id="invite-3">
            <%= label_tag 'Adresse' %>
            <%= text_field_tag "meeting[address]", "", class: 'form-control form-input', placeholder: "16 villa Gaudelet, 75011", required: true %>
            <div class="arrows">
              <%= image_tag "down-arrow.gif", id: "invite-arrow-3"%>
            </div>
          </div>
        </div>
      </div>
    </div>


    <div class="form-bottom">
      <div class="container-wm">
        <div class="form-container">
          <div class="dispo-question" id="invite-4">
            <p><%= @event.meetings.where(organizer: true)[0].user.name %> est disponible à <%= @event.start_time.strftime("%Hh%M") %>. Et toi ?</p>
          </div>
          <div class="btn-group" data-toggle="buttons">
            <label class="btn btn-secondary form-check-label">
            <input class="form-check-input" type="radio" name="meeting[available_time]" id="option1" autocomplete="off" value="plus tôt">
              Plus tôt
            </label>
            <label class="btn btn-secondary form-check-label active">
              <input class="form-check-input" type="radio" name="meeting[available_time]" id="option2" autocomplete="off" value="à la même heure" checked>
              Pareil
            </label>
            <label class="btn btn-secondary form-check-label">
              <input class="form-check-input" type="radio" name="meeting[available_time]" id="option3" autocomplete="off" value="plus tard">
              Plus tard
            </label>
          </div>
          <div class="arrows">
            <i class="" id="invite-arrow-4"></i>
          </div>
        </div>
      </div>
      <div id="invite-5">
        <%= submit_tag "Confirme", class: "btn-blue-wm no-border", id: "new-attending" %>
      </div>
    </div>
  </div>
  <% end %>
</div>
